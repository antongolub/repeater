{
  "name": "@antongolub/repeater",
  "version": "1.2.0",
  "description": "Helper for creating repetitive functions",
  "main": "target/es5/index.js",
  "@std/esm": {
    "mode": "all",
    "cjs": true
  },
  "scripts": {
    "flow": "flow",
    "flow_coverage": "flow-coverage-report -i 'src/main/**/*.js' -t html -t json -t text --threshold 90",
    "build": "BABEL_ENV=production babel src/main/js --out-dir target/es5",
    "lint": "standard src/**/*.js",
    "jest": "jest -w 2 --detectOpenHandles",
    "test": "npm run flow && npm run flow_coverage && npm run lint && npm run jest",
    "doc": "esdoc",
    "test_with_report": "npm test && npm run codeclimate_push && npm run coveralls_push",
    "codeclimate_push": "codeclimate-test-reporter < ./coverage/lcov.info",
    "coveralls_push": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:antongolub/repeater.git"
  },
  "keywords": [
    "repeater",
    "repetitive function",
    "repetable",
    "auto callable",
    "setInterval",
    "setTimeout"
  ],
  "author": "Anton Golub <a.golub@qiwi.com> (http://antongolub.com)",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-flow-strip-types": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-flow": "^7.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-minify": "^0.5.1",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.6",
    "esdoc": "^1.1.0",
    "esdoc-coverage-plugin": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-flow-type-plugin": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint-plugin-flowtype": "^4.2.0",
    "flow-bin": "^0.105.2",
    "flow-coverage-report": "^0.6.1",
    "flow-remove-types": "^2.105.2",
    "jest": "^24.9.0",
    "semantic-release": "^15.13.21",
    "standard": "^14.0.0"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target/es5/",
    "flow-typed/libdef.js"
  ],
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/main/js/interface.js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/main/**/*.js"
    ],
    "testMatch": [
      "<rootDir>/src/test/**/*.js"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "it",
      "expect",
      "describe",
      "before",
      "after",
      "afterEach",
      "beforeEach",
      "TimeoutID"
    ],
    "rules": {
      "use-flow-type": 1
    },
    "ignore": [],
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  }
}
